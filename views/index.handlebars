<div class="container">
    <div class ="row">
        <div class="col-lg-12">
            <h1>Eat a Burger!</h1>
        </div>
    </div>
    <div class ="row">
        <div class="col-md-6">
            <h3>Burgers to Eat:</h3>
                <ul style="list-style: none;">
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{>burger-partial devoured=false}}
                        {{/unless}}
                    {{/each}}
                </ul>
        </div>
        <div class="col-md-6">
            <h3>Burgers that have been eaten: </h3>
                <ul style="list-style: none;">
                    {{#each burgers}}
                        {{#if devoured}}
                            {{>burger-partial devoured=true}}
                        {{/if}}
                    {{/each}}
                </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>What kind of burger do you want to eat??</h3>

                <form class="create-form">
                    <div class="form-group">
                        <label for="burger">Burger: </label>
                        <input type="text" id="burger" name="burger_name">
                    </div>
                    <button type="submit">Add the Burger</button>
                </form>
        </div>

    </div>








</div>